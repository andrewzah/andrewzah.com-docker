https://www.andrewzah.com, andrewzah.com, andrei.blue {
  tls zah@andrewzah.com
  gzip

  log / stdout {combined}
  errors stderr

  proxy /webhook http://web:1111/webhook {
    transparent
  }

  proxy / http://web:1111
}

https://korean.andrewzah.com {
  tls zah@andrewzah.com
  gzip

  geoip /usr/share/GeoLite2-City.mmdb
  redir 302 {
    if {geoip_country_code} is "KR"
    / https://andrei.kr/
  }

  log / stdout {combined}
  errors stderr

  proxy / http://korean_webapp:1111
}

https://irc-media.andrewzah.com {
  tls zah@andrewzah.com
  gzip

  log / stdout {combined}
  errors stderr

  root /var/www/uploads
  basicauth /uploads {%CADDY_USER%} {%CADDY_PASS%}

  webdav /upload {
    scope /var/www/uploads
    modify true
    allow /var/www/uploads
  }

  webdav / {
    scope /var/www/uploads
    modify false
    allow /var/www/uploads
  }
}
